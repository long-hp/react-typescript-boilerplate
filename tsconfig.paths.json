{
  "compilerOptions": {
    "plugins": [
      { "name": "typescript-plugin-css-modules" },
      {
        "name": "typescript-styled-plugin",
        "lint": {
          "validProperties": ["debug"]
        }
      }
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "isolatedModules": false,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "*": ["./@types/*", "*"]
    }
  }
}
